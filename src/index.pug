			a.vlt-menu-burger.vlt-menu-burger--opened.js-offcanvas-menu-close(href="#")
				svg(xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="square" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24")
					defs/
					path(d="M18 6L6 18M6 6l12 12")
		nav.vlt-offcanvas-menu__navigation
			ul.sf-menu
				li(data-menuanchor="Home")
					a(href="#Home") Home
				li(data-menuanchor="Projects")
					a(href="#Projects") Projects

		.vlt-offcanvas-menu__footer
			.vlt-offcanvas-menu__socials
				a.vlt-social-icon.vlt-social-icon--style-1(href="https://github.com/hieronymous-bean")
					i(.lnir-github-original)
				a.vlt-social-icon.vlt-social-icon--style-1(href="https://www.linkedin.com/in/jeffreyallanbrown/")
					i(.lnir-linkedin-original)
			.vlt-offcanvas-menu__copyright
				p © 2020 Copyright. Jeffrey Allan Brown.<br>All rights reserved.

	.vlt-site-overlay
	.vlt-fixed-socials
		a.vlt-social-icon.vlt-social-icon--style-1(href="https://github.com/hieronymous-bean")
			i.lnir-github-original
		a.vlt-social-icon.vlt-social-icon--style-1(href="https://www.linkedin.com/in/jeffreyallanbrown/")
			i.lnir-linkedin-original

	main.vlt-main
		.vlt-fullpage-slider(data-loop-top="" data-loop-bottom="" data-speed="450")
			.vlt-section.pp-scrollable(data-anchor="Home")
				.vlt-section__vertical-align
					.vlt-section__content
						.vlt-section__ken-burn-background.has-mobile-image
							img(src="../assets/img/abstract-spiral/black-11.jpg" alt="")/
							img(src="../assets/img/abstract-spiral/black-11.jpg" alt="")/
						.container
							.row
								.col-lg-12
									.vlt-gap-100
									.vlt-gap-15
									.vlt-animated-block(data-animation-name="fadeInUpSm" style="animation-delay:.2s; animation-duration:700ms;")
										h1.vlt-large-heading Jeffrey Brown
											span.has-accent-color .
									.vlt-gap-15
									.vlt-animated-block(data-animation-name="fadeInUpSm" style="animation-delay:.2s; animation-duration:700ms;")
										p Full-stack web developer currently based in <br>
											<span>Cleveland, Ohio.</span>
			.vlt-section.pp-scrollable(data-anchor="Projects")
				.vlt-section__vertical-align
					.vlt-section__content
						.vlt-section__projects-background
							img(src="../assets/img/deep-space-2.jpg" alt="" loading="lazy")
							img(src="../assets/img/deep-space-2.jpg" alt="" loading="lazy")
							img(src="../assets/img/deep-space-2.jpg" alt="" loading="lazy")
						.container
							.vlt-gap-100
								.vlt-animated-block(data-animation-name="fadeInUpSm" style="animation-delay:0s;animation-duration:700ms;")
									.vlt-content-slider(data-navigation-anchor=".vlt-projects-anchor" data-effect="fade" data-gap="" data-loop="" data-speed="" data-autoplay="" data-autoplay-speed="" data-slides-centered="" data-slide-settings="{}" data-free-mode="" data-slider-offset="" data-mousewheel="")
