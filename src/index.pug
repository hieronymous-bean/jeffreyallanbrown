	include ./partials/_head.pug

	body.animsition
	header.vlt-header.vlt-header--default
		.vlt-navbar.vlt-navbar--main.vlt-navbar--transparent.vlt-navbar--sticky
			.vlt-navbar-background
			.vlt-navbar-inner
				.vlt-navbar-inner--left
					a.vlt-navbar-logo(href="")
						img(src="../assets/img/logo-white.png" alt="jeffreyallanbrown")
				.vlt-navbar-inner--center
					.container
						.vlt-default-menu__navigation
							ul.sf-menu
								li(data-menuanchor="Home")
									a(href="#Home") Home
								li(data-menuanchor="Projects")
									a(href="#Projects") Projects
				.vlt-navbar-inner--right
					.d-flex.align-items-center
						.vlt-navbar-contacts
							a(href="mailto:jeffrey@jeffreyallanbrown.com") jeffrey@jeffreyallanbrown.com
