									.vlt-slider-controls.vlt-slider-controls--style-2.vlt-projects-anchor
										.vlt-swiper-pagination
										.vlt-swiper-button-prev
											svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 45")
												defs
